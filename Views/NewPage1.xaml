<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SumaAppMvvm.ViewModels"
             x:Class="SumaAppMvvm.Views.NewPage1"
             Title="NewPage1">
    
    <ContentPage.BindingContext>
        <viewModels:SumaMvvm/>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout Spacing="30" VerticalOptions="CenterAndExpand">
        <Label Text="SUMA" FontSize="50" TextColor="White" Margin="0,30,0,0" HorizontalOptions="Center"/>
        <Entry Text="{Binding Valor1}" Placeholder="Ingrese un numero" WidthRequest="300" FontSize="20" Keyboard="Numeric"/>
        <Entry Text="{Binding Valor2}" Placeholder="Ingrese un numero" WidthRequest="300" FontSize="20" Keyboard="Numeric"/>

        <Entry Placeholder="Ingrese un numero" Text="{Binding Resultado}" WidthRequest="300" FontSize="20" Keyboard="Numeric"/>
        <Button Text="Sumar" FontSize="20" Command="{Binding SumarCommand}" HorizontalOptions="Center" WidthRequest="300" CornerRadius="50"
                Background="#fff" FontAttributes="Bold" Margin="0,30,0,0"/>
        <Button Text="Limpiar" FontSize="20" HorizontalOptions="Center" WidthRequest="300" CornerRadius="50"
                Background="#003c81" FontAttributes="Bold" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>